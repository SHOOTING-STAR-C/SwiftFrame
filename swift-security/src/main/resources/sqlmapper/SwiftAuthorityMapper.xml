<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.star.swiftSecurity.mapper.SwiftAuthorityMapper">
    <resultMap id="AuthorityResultMap" type="com.star.swiftSecurity.entity.SwiftAuthority">
        <id property="authorityId" column="authority_id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
    </resultMap>

    <select id="findByNameIn" resultMap="AuthorityResultMap">
        SELECT * FROM swift_authorities WHERE name IN
        <foreach item="item" collection="names" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>
