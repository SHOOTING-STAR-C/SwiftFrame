<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.star.swiftSecurity.mapper.mysql.SwiftRoleMapper">
    <!-- 轻量级 ResultMap，不包含关联数据，用于列表查询 -->
    <resultMap id="SimpleRoleResultMap" type="com.star.swiftSecurity.entity.SwiftRole">
        <result property="roleId" column="role_id" javaType="java.lang.Long"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
    </resultMap>

    <!-- 完整 ResultMap，包含权限关联数据，用于详情查询 -->
    <resultMap id="RoleResultMap" type="com.star.swiftSecurity.entity.SwiftRole">
        <result property="roleId" column="role_id" javaType="java.lang.Long"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <collection property="roleAuthorities" ofType="com.star.swiftSecurity.entity.SwiftRoleAuthority"
                    select="com.star.swiftSecurity.mapper.mysql.SwiftRoleAuthorityMapper.findByRole" column="role_id"/>
    </resultMap>

    <select id="findById" resultMap="RoleResultMap">
        SELECT * FROM swift_roles WHERE role_id = #{roleId}
    </select>

    <select id="findByName" resultMap="RoleResultMap">
        SELECT * FROM swift_roles WHERE name = #{name}
    </select>

    <select id="findByNameIn" resultMap="RoleResultMap">
        SELECT * FROM swift_roles WHERE name IN
        <foreach collection="names" item="name" open="(" separator="," close=")">
            #{name}
        </foreach>
    </select>

    <select id="existsByName" resultType="boolean">
        SELECT COUNT(1) > 0 FROM swift_roles WHERE name = #{name}
    </select>

    <insert id="insert">
        INSERT INTO swift_roles(role_id, name, description) 
        VALUES(#{roleId}, #{name}, #{description})
    </insert>

    <update id="update">
        UPDATE swift_roles
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="description != null">description=#{description},</if>
        </set>
        WHERE role_id=#{roleId}
    </update>

    <delete id="deleteById">
        DELETE FROM swift_roles WHERE role_id=#{roleId}
    </delete>

    <select id="findPage" resultMap="SimpleRoleResultMap">
        SELECT * FROM swift_roles LIMIT #{offset}, #{size}
    </select>

    <select id="countAll" resultType="int">
        SELECT COUNT(*) FROM swift_roles
    </select>
</mapper>
